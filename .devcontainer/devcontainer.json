{
    "name": "deep-learning-project-dev",
    "dockerComposeFile": [
        "docker-compose.yaml" // the docker compose file that we want to run
    ],
    "workspaceFolder": "/home/user/code",
	// "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/project,type=bind",
    "service": "service_container_project", // The service in docker-compose.yml that we want vs code to use as a dev containers 
    "shutdownAction": "stopCompose",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "tomoki1207.pdf",
                "silesky.toggle-boolean",
                "ms-azuretools.vscode-docker",
                "flyfly6.terminal-in-status-bar"
            ]
        }
    }
}